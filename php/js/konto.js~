const resetPanels = function ()
{
  for (let itm of document.getElementsByClassName("wrapperButton"))
    document.getElementById(itm.dataset['template']).style = "display: none";
}

// -- Init: Fields
const cFields = [];

const addField = function (name, fields)
{
  cFields.push({
    name: name,
    fields: fields,
  });
}

